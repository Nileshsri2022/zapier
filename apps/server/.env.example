# ==============================================
# Server Environment Variables
# ==============================================

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret for authentication
JWT_SECRET=your-random-jwt-secret

# Server Port
PORT=5000

# Email (Resend - https://resend.com)
RESEND_API_KEY=re_your_api_key
SENDER_EMAIL=onboarding@resend.dev

# Gmail OAuth (optional, for Gmail integration)
GMAIL_CLIENT_ID=your-google-client-id
GMAIL_CLIENT_SECRET=your-google-client-secret
FRONTEND_URL=http://localhost:3000

# GitHub Webhook (optional, for GitHub integration)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Google Sheets OAuth (for Google Sheets trigger)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/sheets/auth/callback

# Upstash Redis (for Google Sheets row hashing state)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
