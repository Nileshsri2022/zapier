generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  email               String               @unique
  password            String
  zaps                Zap[]
  gmailServers        GmailServer[]
  googleSheetsServers GoogleSheetsServer[]
  whatsAppServers     WhatsAppServer[]
  telegramBots        TelegramBot[]
}

model Zap {
  id          String   @id @default(uuid())
  name        String   @default("Untitled")
  userId      Int
  zapRun      ZapRun[]
  triggerId   String
  trigger     Trigger?
  actions     Action[]
  user        User     @relation(fields: [userId], references: [id])
  createdDate DateTime @default(now())
  isActive    Boolean  @default(false)

  // Gmail MCP relations
  gmailTriggers GmailTrigger[]
  gmailActions  GmailAction[]

  // Google Sheets relations
  googleSheetsTriggers GoogleSheetsTrigger[]

  // WhatsApp relations
  whatsAppTriggers WhatsAppTrigger[]

  // Telegram relations
  telegramTriggers TelegramTrigger[]

  // Indexes for faster queries
  @@index([userId])
  @@index([isActive])
  @@index([createdDate])
}

model AvailableTriggers {
  id      String    @id @default(uuid())
  type    String    @unique
  trigger Trigger[]
  image   String
}

model Trigger {
  id        String            @id @default(uuid())
  metadata  Json              @default("{}")
  triggerId String
  zapId     String            @unique
  zap       Zap               @relation(fields: [zapId], references: [id])
  trigger   AvailableTriggers @relation(fields: [triggerId], references: [id])
}

model Action {
  id           String           @id @default(uuid())
  actionId     String
  zapId        String
  zap          Zap              @relation(fields: [zapId], references: [id])
  action       AvailableActions @relation(fields: [actionId], references: [id])
  sortingOrder Int              @default(0)
  metadata     Json             @default("{}")
}

model AvailableActions {
  id     String   @id @default(uuid())
  type   String   @unique
  action Action[]
  image  String
}

model ZapRun {
  id           String        @id @default(uuid())
  zapId        String
  zap          Zap           @relation(fields: [zapId], references: [id])
  zapRunOutbox ZapRunOutbox?
  metadata     Json
  createdAt    DateTime      @default(now())

  // Index for faster zap run lookups
  @@index([zapId])
  @@index([createdAt])
}

model ZapRunOutbox {
  id       String @id @default(uuid())
  zapRunId String @unique
  zapRun   ZapRun @relation(fields: [zapRunId], references: [id])
}

// Gmail MCP Server Configuration
model GmailServer {
  id           String    @id @default(uuid())
  name         String
  clientId     String // OAuth Client ID
  clientSecret String // Encrypted
  refreshToken String // Encrypted
  accessToken  String // Encrypted, expires frequently
  tokenExpiry  DateTime?
  isActive     Boolean   @default(true)
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  gmailTriggers GmailTrigger[]
  gmailActions  GmailAction[]
  watchHistory  GmailWatch[]

  // Indexes
  @@index([userId])
  @@index([isActive])
}

// Gmail-specific triggers
model GmailTrigger {
  id       String      @id @default(uuid())
  serverId String
  server   GmailServer @relation(fields: [serverId], references: [id])
  zapId    String      @unique
  zap      Zap         @relation(fields: [zapId], references: [id])

  // Trigger configuration
  triggerType     String // 'new_email', 'labeled', 'starred', 'moved'
  watchedLabels   String[] // Specific labels to watch
  senderFilter    String? // Filter by sender email
  subjectFilter   String? // Filter by subject pattern
  webhookExpiry   DateTime?
  watchExpiration DateTime?

  // Metadata
  metadata Json? // Additional trigger configuration
}

// Gmail-specific actions
model GmailAction {
  id       String      @id @default(uuid())
  serverId String
  server   GmailServer @relation(fields: [serverId], references: [id])
  zapId    String
  zap      Zap         @relation(fields: [zapId], references: [id])

  // Action configuration
  actionType String // 'send_email', 'reply', 'add_label', 'remove_label', 'mark_read', 'archive'
  metadata   Json // Action-specific parameters
}

// Gmail webhook watch history
model GmailWatch {
  id        String      @id @default(uuid())
  serverId  String
  server    GmailServer @relation(fields: [serverId], references: [id])
  watchId   String // Gmail's watch ID
  expiry    DateTime
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
}

// Google Sheets OAuth Server Configuration
model GoogleSheetsServer {
  id           String    @id @default(uuid())
  name         String
  email        String // Google account email
  refreshToken String // Encrypted
  accessToken  String // Encrypted
  tokenExpiry  DateTime?
  isActive     Boolean   @default(true)
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  triggers GoogleSheetsTrigger[]

  // Indexes
  @@index([userId])
  @@index([isActive])
}

// Google Sheets Trigger Configuration
model GoogleSheetsTrigger {
  id       String             @id @default(uuid())
  serverId String
  server   GoogleSheetsServer @relation(fields: [serverId], references: [id])
  zapId    String             @unique
  zap      Zap                @relation(fields: [zapId], references: [id])

  // Sheet configuration
  spreadsheetId String // Google Sheets ID
  sheetName     String @default("Sheet1") // Sheet tab name

  // Polling state
  lastPolledAt DateTime?
  isActive     Boolean   @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for polling queries
  @@index([isActive])
  @@index([lastPolledAt])
  @@index([serverId])
}

// ============================================
// WhatsApp Cloud API Integration
// ============================================

model WhatsAppServer {
  id              String            @id @default(uuid())
  userId          Int
  phoneNumberId   String            @unique // Meta Phone Number ID
  accessToken     String // Permanent access token (encrypted in prod)
  businessId      String // WhatsApp Business Account ID
  displayName     String? // Display name for the account
  phoneNumber     String? // Actual phone number (for display)
  webhookVerified Boolean           @default(false)
  isActive        Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  user            User              @relation(fields: [userId], references: [id])
  triggers        WhatsAppTrigger[]

  @@index([userId])
  @@index([phoneNumberId])
  @@index([isActive])
}

model WhatsAppTrigger {
  id              String         @id @default(uuid())
  serverId        String
  server          WhatsAppServer @relation(fields: [serverId], references: [id])
  zapId           String         @unique
  zap             Zap            @relation(fields: [zapId], references: [id])
  eventType       String         @default("message_received") // message_received, message_delivered, etc.
  lastProcessedAt DateTime?
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([serverId])
  @@index([isActive])
  @@index([zapId])
}

// ============================================
// Telegram Bot Integration
// ============================================

model TelegramBot {
  id                String            @id @default(uuid())
  userId            Int
  botToken          String            @unique // Bot token from BotFather
  botUsername       String // e.g., "myzapmate_bot"
  botName           String // Display name
  webhookConfigured Boolean           @default(false)
  isActive          Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  user              User              @relation(fields: [userId], references: [id])
  triggers          TelegramTrigger[]

  @@index([userId])
  @@index([isActive])
}

model TelegramTrigger {
  id              String      @id @default(uuid())
  botId           String
  bot             TelegramBot @relation(fields: [botId], references: [id])
  zapId           String      @unique
  zap             Zap         @relation(fields: [zapId], references: [id])
  eventType       String      @default("message") // message, command, callback_query
  filterCommand   String? // Optional: only trigger on specific command like "/start"
  lastProcessedAt DateTime?
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([botId])
  @@index([isActive])
  @@index([zapId])
}
