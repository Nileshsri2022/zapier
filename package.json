{
  "name": "zapier",
  "private": true,
  "scripts": {
    "build": "bun run build:packages && bun run build:web",
    "build:packages": "cd packages/types && bun run build",
    "build:web": "cd apps/web && bun run build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@jest/globals": "^30.1.2",
    "nodemon": "^3.1.10"
  }
}